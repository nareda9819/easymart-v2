# Environment Variables for Easymart Assistant Backend

# Application
APP_NAME=Easymart Assistant
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Backend Node.js URL
NODE_BACKEND_URL=http://localhost:3000

# Hugging Face Configuration (PRIMARY - for Mistral-7B)
HUGGINGFACE_API_KEY=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
HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co/models
HUGGINGFACE_TIMEOUT=30
HUGGINGFACE_MAX_RETRIES=3

# OpenAI / LLM (OPTIONAL - fallback only)
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Search Configuration
SEARCH_LIMIT_DEFAULT=5
SEARCH_HYBRID_ALPHA=0.5

# Session Management
SESSION_TIMEOUT_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
